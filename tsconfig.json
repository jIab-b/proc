{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "noEmit": true,
    
    "baseUrl": ".",
    "paths": {
      "@gpu/*": ["src/gpu/*"],
      "@pipelines/*": ["src/pipelines/*"]
    }
  },
  "include": ["src"]
}
